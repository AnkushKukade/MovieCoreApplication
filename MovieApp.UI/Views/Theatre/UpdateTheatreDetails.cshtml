@model MovieApp.Entity.TheatreModel
@{
    ViewData["Title"] = "UpdateTheatreDetails";
}


<a asp-action="ShowTheatreDetails" asp-controller="Theatre">Show-AllTheatreDetails</a>
<hr />
<h1>UpdateTheatreDetails</h1>
<hr />
<div class="container">
    <form method="post">
        <div class="form-group">
            <label class="col-sm-3">TheatreId</label>
            <input type="text" class="form-control" asp-for="TheatreId" disabled="disabled" />
        </div>
        <div class="form-group">
            <label class="col-sm-3">Theatre-Name</label>
            <input type="text" class="form-control" asp-for="TheatreName" />
        </div>
       
        <div class="form-group">
            <label class="col-sm-3">Theatre-Location</label>
            <input type="text" class="form-control" asp-for="TheatreLocation" />
        </div>
       
        <div class="form-group col-sm-3">
            <input type="submit" value="Update-Details" class=" btn btn-lg btn-block btn-primary" />
        </div>
        <div class="form-group col-sm-3">
            <input type="button" value="Reset" class="btn btn-secondary" />
        </div>

        <hr />
        @if (ViewBag.status == "Success")
        {
            <div class="alert alert-success">
                @ViewBag.message
            </div>
        }
        else if (ViewBag.status == "Error")
        {
            <div class="alert alert-danger">
                @ViewBag.message
            </div>
        }
    </form>
</div>
